<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_marginTop="40dp"
    android:background="@drawable/rounded_corner_backgourd"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <ImageButton
            android:id="@+id/todo_out_btn"
            android:layout_gravity="right"
            android:layout_marginTop="17.2dp"
            android:layout_marginRight="17.6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ax">
        </ImageButton>


    <EditText
        android:id="@+id/editMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/medi"
        android:includeFontPadding="false"
        android:inputType="textPersonName"
        android:text="ToDo 일정이름"
        android:textSize="24dp" />

    <View
            android:layout_marginTop="4dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="#E0E0E0">
        </View>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

        <TextView
            android:paddingTop="20dp"
            android:paddingLeft="30dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regul"
            android:gravity="left"
            android:textSize="16dp"
            android:text="날짜" />
        <TextView
            android:id="@+id/click_day"
            android:paddingTop="6dp"
            android:paddingLeft="30dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medi"
            android:gravity="left"
            android:textSize="16dp"
            android:text="2023.01.01" />
        <TextView
            android:paddingTop="32dp"
            android:paddingBottom="6dp"
            android:paddingLeft="30dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regul"
            android:gravity="left"
            android:textSize="16dp"
            android:text="색상" />
        <LinearLayout
            android:paddingLeft="8dp"
            android:paddingRight="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/red_circle">
            </ImageButton>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/color_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/orange">
            </ImageButton>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/color_yello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/yello">
            </ImageButton>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/color_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/green">
            </ImageButton>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/blue">
            </ImageButton>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/color_blue_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/bluepurple">
            </ImageButton>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/color_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/purple">
            </ImageButton>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/color_pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/pink">
            </ImageButton>
        </LinearLayout>
        <TextView
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regul"
            android:gravity="left"
            android:textSize="16dp"
            android:text="태그" />
        <LinearLayout
            android:paddingTop="6dp"
            android:paddingLeft="30dp"
            android:paddingRight="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tag_no"
                android:layout_width="65dp"
                android:layout_height="38dp"
                android:background="@drawable/rounded_corner"
                android:fontFamily="@font/medi"
                android:includeFontPadding="false"
                android:text="없음"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp"></androidx.appcompat.widget.AppCompatButton>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tag_medicine"
                android:layout_width="65dp"
                android:layout_height="38dp"
                android:text="병원"
                android:textSize="12dp"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:fontFamily="@font/medi"
                android:background="@drawable/rounded_corner_white"></androidx.appcompat.widget.AppCompatButton>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tag_cut"
                android:layout_width="65dp"
                android:layout_height="38dp"
                android:text="미용"
                android:textSize="12dp"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:fontFamily="@font/medi"
                android:background="@drawable/rounded_corner_white"></androidx.appcompat.widget.AppCompatButton>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tag_walk"
                android:layout_width="65dp"
                android:layout_height="38dp"
                android:text="산책"
                android:textSize="12dp"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:fontFamily="@font/medi"
                android:background="@drawable/rounded_corner_white"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
        <TextView
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingBottom="6dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regul"
            android:gravity="left"
            android:textSize="16dp"
            android:text="메모" />

                    <EditText
                        android:layout_marginLeft="30dp"
                        android:id="@+id/editMemo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name" />
        <!--<EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corner_memo"
            android:fontFamily="@font/regul"
            android:gravity="left"
            android:includeFontPadding="false"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp"
            android:text="태그"
            android:textColor="@color/black"
            android:textSize="12dp" />-->
        </LinearLayout>
    </ScrollView>
    <!---->
    <!---->
    <androidx.appcompat.widget.AppCompatButton
        android:layout_gravity="bottom"
        android:id="@+id/todo_add_btn"
        android:background="@drawable/rec_corner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/bold"
        android:includeFontPadding="false"
        android:text="완료"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"></androidx.appcompat.widget.AppCompatButton>
</LinearLayout>
